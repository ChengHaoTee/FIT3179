{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Population Year 2020",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer":[

    {"data": {"sphere": true},
     "mark": {"type": "geoshape", "fill": "#a7d3e7"}
    }

    ,

    {
      "data": {
        "url": "https://raw.githubusercontent.com/limhanwei123/3179/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
    }
    
    ,

    {
      "data": {
        "url": "https://raw.githubusercontent.com/limhanwei123/3179/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "grey"},
      "transform": [
        {"calculate": "'No Recorded Data in ' + datum.properties.NAME", "as": "MissedData"}
      ],
      "encoding": {"tooltip": {"field": "MissedData"}}
    }

    ,

    {
      "data": {
        "url": "mygeodata/ne_110m/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "Data/world_population.csv"
            },
            "key": "Country",
            "fields": ["Population (2020)"]
          }
        }
      ],
      "mark": {"type": "geoshape","stroke":"lightgrey"},
      "encoding": {
        "color": {
          "field": "Population (2020)",
          "type": "quantitative",
          "scale": {"type": "threshold","domain":[10000000,50000000,100000000,500000000],"range": ["#fdbe85", "#fd8d3c","fd7e23", "#e6550d", "#a63603"]}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Population (2020)", "type": "quantitative"}
        ]
      }
    }
  ]
}