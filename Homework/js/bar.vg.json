{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "title":"Top 10 Countries GDP",

    "data": {"url": "https://raw.githubusercontent.com/ChengHaoTee/FIT3179/main/Homework/Data/Top10CountryGDP.csv"},
    "height": {"step": 50},
      "mark": {"type": "bar", "yOffset": 5, "cornerRadiusEnd": 2, "height": {"band": 0.5}},
    "encoding": {
      "y": {
        "field": "Country.or.region",
        "title":"Country or Region",
        "scale": {"padding": 0},
        "axis": {
          "bandPosition": 0,
          "grid": true,
          "domain": false,
          "ticks": false,
          "labelAlign": "left",
          "labelBaseline": "middle",
          "labelPadding": -5,
          "labelOffset": -15,
          "titleX": 5,
          "titleY": -5,
          "titleAngle": 0,
          "titleAlign": "left"
        }
        
      },
      "x": {
        "field": "GDP.per.capita",
        "axis": {"grid": false},
        "title": "GDP per Capita"
      },

      "tooltip":[
        {"field":"Country.or.region","type":"nominal" },
        {"field":"GDP.per.capita","type": "quantitative","format":".2f"}
      ]
    }
  }