{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/ChengHaoTee/FIT3179/main/Assignment/Assignment_Data/2020.csv"},
    "transform": [{
      "filter": {"and": [
        {"field": "Ladder score", "valid": true},
        {"field": "Logged GDP per capita", "valid": true},
        {"field": "Generosity", "valid": true}
      ]}
    }],
    "mark": "rect",
    "width": 300,
    "height": 200,
    "encoding": {
      "x": {
        "bin": {"maxbins":60},
        "field": "Ladder score",
        "type": "quantitative"
      },
      "y": {
        "bin": {"maxbins": 40},
        "field": "Logged GDP per capita",
        "type": "quantitative"
      },
      "color": {
        "field": "Generosity",
        "aggregate":"average",
        "type": "quantitative"
      }
    },
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }
